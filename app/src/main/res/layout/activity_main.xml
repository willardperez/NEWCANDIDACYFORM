                android:textColor="@color/black">
            </RadioButton>

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/Xmarried"
                android:text="MARRIED"
                android:textColor="@color/black">
            </RadioButton>

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/Xdivorced"
                android:text="DIVORCED"
                android:textColor="@color/black">
            </RadioButton>

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/Xwidowed"
                android:text="WIDOWED"
                android:textColor="@color/black">
            </RadioButton>

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/Xothers"
                android:text="OTHERS"
                android:textColor="@color/black">

            </RadioButton>


        </RadioGroup>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="CIVIL STATUS"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/Xelectiveposition">

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/Xdirector"
                android:text="DIRECTOR"
                android:textColor="@color/black">
            </RadioButton>

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/Xaudit"
                android:text="AUDIT COMITTEE"
                android:textColor="@color/black">
            </RadioButton>

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/Xelection"
                android:text="ELECTION COMITTEE"
                android:textColor="@color/black">
            </RadioButton>




        </RadioGroup>


        
        
        
        
        
        
        
